@model Group6_iCLOTHINGApp.Models.UserQuerys

@{
    ViewBag.Title = "Reply";
}

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>User Submitted Querys</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.queryNo)
    <td>
        @Html.DisplayFor(model => model.Customers.customerName):
    </td>
    <td>
        @Html.DisplayFor(model => model.queryDescription) |
    </td>
    <td>
        @Html.DisplayFor(model => model.queryDate) |
    </td>
    <div class="form-horizontal">
        <h4>Reply to query</h4>
        <hr />
        <div class="form-group">
            Submit response
            <div class="col-md-10">
                <input type="text" name="response" id="response" />
            </div>
        </div>
        <input type="hidden" id="queryNo" value=model.queryNo />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SubmitLoginForm" class="btn btn-default" />
            </div>
        </div>

    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
