@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>iCLOTHING</h1>
    <p class="lead">buy some clothes</p>


</div>

<div class="row">
    <div class="col-md-4">
        <h2>@Html.ActionLink("Create New Account", "NewAcctForm", "CreateAccount")</h2>
