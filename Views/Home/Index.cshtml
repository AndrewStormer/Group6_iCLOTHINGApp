        <h2>@Html.ActionLink("Brands", "Index", "Brands")</h2>
        <p>view different brands we offer.</p>
    </div>

    <div class="col-md-4">
        <h2>@Html.ActionLink("Add a comment", "Create", "UserComments")</h2>
