@model IEnumerable<Group6_iCLOTHINGApp.Models.CartProducts>

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Shopping Cart</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.productName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.productPrice)
        </th>
        <th></th>
    </tr>

    @{
        var count = 0;
        foreach (var item in Model)
        {
            ++count;
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productQuantity)
                </td>
                <td>
                    @Html.ActionLink(item.Products.productName, "Details", "Products", new { id = item.Products.productID }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Products.productPrice)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.cartProductID }, null)
                </td>
            </tr>

        }
        if (count > 0)
        {
            @Html.ActionLink("Check out cart", "CheckOut", new { id = Session["CartID"] });

        }
    }


</table>
