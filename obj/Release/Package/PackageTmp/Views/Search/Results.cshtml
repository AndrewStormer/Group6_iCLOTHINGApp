@model IEnumerable<Group6_iCLOTHINGApp.Models.Products>

    @{
    ViewBag.Title = "Index";
    }

    <h2>Search Results</h2>

    <table class="table">
        <tr>
            <th>
                Product:
            </th>
            <th>
                Description:
            </th>
            <th>
                Price:
            </th>
            <th>
                Left in Stock:
            </th>
            <th>
                Brand:
            </th>
            <th>
                Category:
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productDescription)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.productPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.productQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brands.brandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.categoryName)
            </td>
            <td>
                @Html.ActionLink("Add to cart", "Create", "CartProducts")
            </td>
        </tr>
    }

    </table>

