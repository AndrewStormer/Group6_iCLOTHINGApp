@model IEnumerable<Group6_iCLOTHINGApp.Models.Departments>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.departmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departmentDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink(item.departmentName, "Index", "Categories", new {id = item.departmentID}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departmentDescription)
        </td>
    </tr>
}

</table>
